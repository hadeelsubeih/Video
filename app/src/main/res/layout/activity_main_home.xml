        android:layout_height="75dp"
        android:layout_margin="50px"
        android:textColor="#fff"
android:textSize="30dp"
        android:background="@color/colorAccent"
        android:text="Video3"></Button>

    <Button
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="50px"
